@model Vigant.ViewModels.InterestViewModel

@{
    ViewData["Title"] = "Интерес";
}

<h1>Interest</h1>

<div>
    <h4>Програмиране</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Участници
        </dt>
        @if (Model.Participants.Count == 0)
        {
            <dd class="col-sm-10">
                Няма участници
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @for (int i = 0; i < Model.Participants.Count; i++)
                {
                    <a href="/">@Html.DisplayFor(model => model.Participants[i].UserName)</a><br>
                }
            </dd>
        }
        </dl>
</div>
<div>
    <a asp-action="Index">Назад</a>
</div>
